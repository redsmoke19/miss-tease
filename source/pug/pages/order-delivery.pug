extends ../components/base/layout

block variables
  - const title = "Оформление заказа"
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "order.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    h1.visually-hidden Корзина
    +order({step: 2})

block modals
  +modal-message({status: 'success', text: "Промокод успешно применен", icon: "icon-done"})(data-modal="success")
  +modal-message({status: 'error', text: "Промокод не действителен", icon: "icon-error"})(data-modal="error")
